<%- include('parts/html-head') %>
<%- include('parts/navbar') %>

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                   
                  <li class="page-item <%= 1===page ? 'disabled' : '' %>">
                      <a class="page-link" href="?page=<%= page-1 %>">
                        <i class="fas fa-arrow-circle-left"></i>
                      </a>
                    </li>
                 
                  <% for(let i=page-5; i<=page+5; i++) if(i>=1 && i<=totalPages){ %>
                    <li class="page-item <%= i===page ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                  <% } %>
              
                  <li class="page-item <%= totalPages===page ? 'disabled' : '' %>">
                      <a class="page-link" href="?page=<%= page+1 %>">
                        <i class="fas fa-arrow-circle-right"></i>
                      </a>
                    </li>
              
                </ul>
              </nav>
        </div>
    </div>


    <div class="row">
        <div class="col">

            <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col"><i class="fas fa-trash-alt"></i></th>
                    <th scope="col">員工編號</th>
                    <th scope="col">姓名</th>
                    <th scope="col">電話</th>
                    <th scope="col">電郵</th>
                    <th scope="col">入職日</th>
                    <th scope="col">薪水</th>
                    <th scope="col">部門</th>
                    <th scope="col">職稱</th>
                    <th scope="col"><i class="fas fa-edit"></i></th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i of rows){ %>
                  <tr>
                    <td>
                      <a href="javascript: del_it(<%= i.empno %>)">
                        <i class="fas fa-trash-alt"></i>
                      </a>
                    </td>
                    <td><%= i.empno %></td>
                    <td><%= i.ename %></td>
                    <td><%= i.mobile %></td>
                    <td><%= i.email %></td>
                    <td><%= toDateString(i.hiredate) %></td>
                    <td><%= i.salary %></td>
                    <td><%= i.dname %></td>
                    <td><%= i.title %></td>
                    <td>
                      <a href="/employee/edit/<%= i.empno %>">
                        <i class="fas fa-edit"></i>
                      </a>
                    </td>

                  </tr>
                  <% } %>
                </tbody>
            </table>
        </div>
    </div>



</div>

<%- include('parts/scripts') %>
<script>
  function del_it(empno) {
    if(confirm(`確定要刪除編號為 ${empno} 的資料嗎?`)){
      location.href = '/employee/del/' + empno;
    }
  }

</script>


<%- include('parts/html-foot') %>